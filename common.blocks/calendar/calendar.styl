.calendar
{
    font-size: 3em;
    margin: 0 auto;

    &__month
    {
        border-collapse: collapse;
    }

    &__cell
    {
        padding: 0.7em;
        border: 0.1em solid transparent;
        cursor: default;
    }

    &__day
    {
        border: 1px solid black;
        padding: 0;
        text-align: center;

        &_other-month
        {
            opacity: 0.5;
        }

        &_weekend
        {
            background-color: #fdd;
        }

        &_today
        {
            font-weight: bold;

            .calendar__cell
            {
                border-color: #666;
            }
        }

        &_selected .calendar__cell
        {
            border-color: #aad;
        }

        &:hover .calendar__cell
        {
            background-color: #ddf;
        }
    }

    th
    {
        padding: 0.5em;
    }
}
